        </div>
        <div class="field name required">
            <label class="label" for="item-owner-email"><span><?= __('Item Owner Email'); ?></span></label>
            <div class="control">
                <input name="item-owner-email" id="item-owner-email" title="Item Owner Email" value="" type="text" class="input-text" data-validate='{"required":true, "validate-emails":true}'/>
            </div>
        </div>
    </fieldset>
    <div class="actions-toolbar">
        <div class="primary">
            <button type="submit" title="Submit" class="action submit primary">
                <span><?= __('Submit'); ?></span>
            </button>
        </div>
    </div>
</form>
